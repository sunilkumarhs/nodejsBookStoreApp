extends ../layouts/main_layout.pug

block styles 
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main.main-section 
            form.form-section(action="/auth/signup", method="POST")
                h1.form-title SignUp-Page 
                div.form-controler 
                    label(for="userEmail") Email 
                    input(type="text",placeholder="Email", name="userEmail")
                div.form-controler 
                    label(for="userPassword") Password 
                    input(type="text",placeholder="Password", name="userPassword")
                div.form-controler 
                    label(for="userCPassword") Confirm Password 
                    input(type="text",placeholder="Password", name="userCPassword")
                p.error__msg #{errorMessage}
                input(type="hidden", name="_csrf", value=csrfToken)
                button.form-button(type="submit") SignUP