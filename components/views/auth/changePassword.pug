extends ../layouts/main_layout.pug

block styles 
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main.main-section 
            form.form-section(action="/auth/changePassword", method="POST")
                h1.form-title ChangePassword-Page 
                div.form-controler 
                    label(for="userEmail") Password 
                    if(validationErrors.find(e => e.path === "password"))
                        input.invalid(type="password",placeholder="Password", name="password", value=outPutData.password)
                    else 
                        input(type="password",placeholder="Password", name="password", value=outPutData.password)
                    label(for="userEmail") Confirm Password 
                    if(validationErrors.find(e => e.path === "confPassword"))
                        input.invalid(type="password",placeholder="Password", name="confPassword", value=outPutData.confPassword)
                    else 
                        input(type="password",placeholder="Password", name="confPassword", value=outPutData.confPassword)
                p.error__msg #{errorMessage}
                input(type="hidden", name="userId", value=userId)
                input(type="hidden", name="resetToken", value=resetToken)
                input(type="hidden", name="_csrf", value=csrfToken)
                button.form-button(type="submit") Change Password
