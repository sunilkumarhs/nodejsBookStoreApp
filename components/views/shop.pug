extends layouts/main_layout.pug

block styles 
    link(rel="stylesheet", href="/css/main.css")

block content 
    main 
        div.main-section
            h1.main-section-heading Books Container 
        div.main-section-prds 
            if prds.length > 0
                each product in prds 
                    div.card.prd-item
                        header.card__header 
                            h1.prd__title #{product.title}
                        div.card__img 
                            img.img__dis(src="https://img.etimg.com/photo/msid-102177218,imgsize-235452/YouCan%2CbyGeorgeMatthewAdams.jpg", alt="BookPhoto")
                        div.card__content 
                            h3.prd__price â‚¹ 186.00
                            p.prd__description A very interesting book about so many life saver insights.
                        div.card__actions 
                            button.btn Add to Cart
            else 
                h1 No Books to Display!! 
